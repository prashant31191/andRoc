<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.rocrail.androc"
      android:versionName="392" android:versionCode="392">
    <supports-screens android:anyDensity="false" android:largeScreens="true"
          android:normalScreens="true" android:smallScreens="true"/>
      
    <application android:icon="@drawable/rocrail" android:label="@string/app_name" >
        <activity android:name="net.rocrail.androc.activities.ActConnect" 
                  android:label="@string/app_name" android:theme="@style/FullHeightDialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActThrottle" android:theme="@style/FullHeightDialog"/>
        <activity android:name=".activities.ActSystem" android:theme="@style/FullHeightDialog"/>
        <activity android:name=".activities.ActMenu" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLayout" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLoco" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLocoSetup" android:theme="@style/FullHeightDialog"/>
        <activity android:name=".activities.ActLevel" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".activities.ActInfo" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActRoutes" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActBlock" android:theme="@style/FullHeightDialog"/>
        <activity android:name=".activities.ActStage" android:theme="@style/FullHeightDialog"/>
        <activity android:name=".activities.ActFiddleYard" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActTurntable" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActPreferences" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActAccessory" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActActions" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActSwitches" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActOutputs" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLocoList" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLocoExpList" android:theme="@style/FullHeightDialog" />
        <activity android:name=".activities.ActLocoConsist" android:theme="@style/FullHeightDialogText" />
        <activity android:name=".activities.ActGuestLoco" android:theme="@style/FullHeightDialogText" />
        <service android:name=".RocrailService"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>

</manifest> 