<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.rocrail.androc"
      android:versionCode="97"
      android:versionName="0.9.5">
    <supports-screens android:anyDensity="false" android:largeScreens="true"
          android:normalScreens="true" android:smallScreens="true"/>
      
    <application android:icon="@drawable/rocrail" android:label="@string/app_name" >
        <activity android:name="net.rocrail.androc.activities.ActConnect" 
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActThrottle" />
        <activity android:name=".activities.ActSystem" />
        <activity android:name=".activities.ActMenu" />
        <activity android:name=".activities.ActLayout" />
        <activity android:name=".activities.ActLoco" />
        <activity android:name=".activities.ActLevel" />
        <activity android:name=".activities.ActInfo" />
        <activity android:name=".activities.ActRoutes" />
        <activity android:name=".activities.ActBlock" />
        <service android:name=".RocrailService"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>

</manifest> 