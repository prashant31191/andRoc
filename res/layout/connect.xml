<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="300dp"
  android:layout_height="fill_parent" android:padding="5px">
  <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
      android:layout_width="fill_parent" android:layout_height="wrap_content">
      <TextView android:text="@string/Title" android:textStyle="bold"
        android:id="@+id/labTitle" android:layout_weight="30"
        android:layout_width="0px" android:layout_height="wrap_content"
        android:padding="4px"></TextView>
      <TextView android:text="Title" android:id="@+id/connectTitle"
        android:layout_width="0px" android:layout_weight="70" android:textStyle="bold"
        android:layout_height="wrap_content" android:padding="4px"></TextView>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
      android:layout_width="fill_parent" android:layout_height="wrap_content">
      <TextView android:text="@string/Host" android:textStyle="bold"
        android:id="@+id/labHost" android:layout_weight="30"
        android:layout_width="0px" android:layout_height="wrap_content"
        android:padding="4px"></TextView>
      <EditText android:text="Host" android:id="@+id/connectHost"
        android:layout_width="0px" android:layout_weight="70"
        android:layout_height="wrap_content" android:padding="4px"></EditText>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" 
      android:layout_width="fill_parent" android:layout_height="wrap_content">
      <TextView android:text="@string/Port" android:textStyle="bold"
        android:id="@+id/labPort" android:layout_weight="30"
        android:layout_width="0px" android:layout_height="wrap_content"
        android:padding="4px"></TextView>
      <EditText android:text="Port" android:id="@+id/connectPort"
        android:layout_width="0px" android:layout_weight="70"
        android:layout_height="wrap_content" android:padding="4px"></EditText>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" 
      android:layout_width="fill_parent" android:layout_height="wrap_content">
      <TextView android:text="@string/ControlCode" android:textStyle="bold"
        android:id="@+id/labControlCode" android:layout_weight="30"
        android:layout_width="0px" android:layout_height="wrap_content"
        android:padding="4px"></TextView>
      <EditText android:text="" android:id="@+id/controlCode"
        android:layout_width="0px" android:layout_weight="70"
        android:layout_height="wrap_content" android:padding="4px"></EditText>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" 
      android:layout_width="fill_parent" android:layout_height="wrap_content">
      <TextView android:text="@string/Recent" android:textStyle="bold"
        android:id="@+id/labRecent" android:layout_weight="30"
        android:layout_width="0px" android:layout_height="wrap_content"
        android:padding="4px"></TextView>
      <Spinner android:id="@+id/connectRecent" android:layout_width="0px" android:padding="4px"
      android:layout_height="wrap_content" android:layout_weight="70"></Spinner>
    </LinearLayout>

</LinearLayout>
  
  <Button android:text="@string/Connect"
    android:textStyle="bold" android:id="@+id/ButtonConnect" 
    android:layout_width="fill_parent" android:layout_height="60dp" android:textSize="20sp"></Button>

  <ImageView android:id="@+id/logoImage" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:src="@drawable/logo"
    android:padding="4px" android:layout_gravity="center"></ImageView>

</LinearLayout>
